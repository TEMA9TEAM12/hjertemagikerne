---
const text = Astro.props.text;
---

<a href="#">
  <div class="btn-container">
    <button>
      <p>{text}</p>
      <slot />
    </button>
  </div>
</a>

<style>
  button {
    /* display: inline-block; */
    padding: 3px 30px;
    border-radius: 35px;
    color: white;
    font-size: 12px;
    position: relative;
    background-color: #ff97d6;
    cursor: pointer;
    z-index: 0;
    border-color: transparent;
    font-family: "FunkyFont";
    display: flex;
    gap: 1em;
    align-items: center;
  }

  .btn-container {
    display: flex;
    justify-content: center;
    margin: 15px 0;
  }

  button:hover {
    background-color: #d49bab;
  }
  button:focus {
    background-color: #f0d8df;
  }

  a {
    text-decoration: none;
  }
</style>
